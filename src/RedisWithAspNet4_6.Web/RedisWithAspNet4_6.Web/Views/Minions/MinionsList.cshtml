@using RedisWithAspNet4_6.Web.Models;

@model IEnumerable<Minion>

@{
    ViewBag.Title = "Minions List";
}

<h2>Minions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nickname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Traits.Height)
        </th>
        <th>
            Eyes Quantity
        </th>
        <th>
            Body Type
        </th>
        <th>
            Hair Style
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.MovieMoments)
        </th>*@
        <th>
            Actions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nickname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Traits.Height)<span>cm</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Traits.EyesQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Traits.BodyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Traits.HairStyle)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.MovieMoments)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id } ) |
            @Html.ActionLink("Details", "Details", new { id = item.Id} ) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
